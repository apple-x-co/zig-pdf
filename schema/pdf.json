{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/apple-x-co/zig-pdf/schema/pdf.json",
  "title": "zig-pdf schema",
  "type": "object",
  "definitions": {
    "alignment": {
      "title": "子要素の配置",
      "description": "子要素の配置を設定",
      "type": "string",
      "enum": [
        "bottom_center",
        "bottom_left",
        "bottom_right",
        "center",
        "center_left",
        "center_right",
        "top_center",
        "top_left",
        "top_right"
      ]
    },
    "any_container": {
      "title": "コンテナ",
      "description": "レイアウトコンテナやコンテントコンテナ",
      "oneOf": [
        {
          "$ref": "#/definitions/box"
        },
        {
          "$ref": "#/definitions/col"
        },
        {
          "$ref": "#/definitions/image"
        },
        {
          "$ref": "#/definitions/positioned_box"
        },
        {
          "$ref": "#/definitions/row"
        },
        {
          "$ref": "#/definitions/text"
        }
      ]
    },
    "border": {
      "title": "線",
      "description": "線を設定",
      "type": "object",
      "properties": {
        "color": {
          "$ref": "#/definitions/color"
        },
        "top": {
          "title": "上の線幅",
          "type": "integer",
          "default": 0
        },
        "right": {
          "title": "右の線幅",
          "type": "integer",
          "default": 0
        },
        "bottom": {
          "title": "下の線幅",
          "type": "integer",
          "default": 0
        },
        "left": {
          "title": "左の線幅",
          "type": "integer",
          "default": 0
        }
      }
    },
    "box": {
      "title": "単一レイアウトコンテナ",
      "description": "コンテナまたはコンテントを1つ保持",
      "type": "object",
      "properties": {
        "border": {
          "$ref": "#/definitions/border"
        },
        "child": {
          "$ref": "#/definitions/any_container"
        },
        "type": {
          "$ref": "#/definitions/container_type",
          "enum": ["box"]
        },
        "color": {
          "$ref": "#/definitions/color"
        },
        "expanded": {
          "$ref": "#/definitions/expanded"
        },
        "padding": {
          "$ref": "#/definitions/padding"
        },
        "size": {
          "$ref": "#/definitions/size"
        }
      },
      "required": [
        "child",
        "type"
      ]
    },
    "col": {
      "title": "列レイアウトコンテナ",
      "description": "複数のコンテナを保持",
      "properties": {
        "alignment": {
          "$ref": "#/definitions/alignment"
        },
        "type": {
          "$ref": "#/definitions/container_type",
          "enum": ["col"]
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/any_container"
          },
          "minItems": 1
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "color": {
      "title": "色",
      "description": "色を設定",
      "default": "000000",
      "type": "string",
      "minLength": 6,
      "maxLength": 6,
      "pattern": "[a-zA-Z0-9]{6}"
    },
    "container_type": {
      "description": "コンテナータイプ",
      "type": "string",
      "minLength": 1,
      "maxLength": 20
    },
    "expanded": {
      "title": "拡大",
      "description": "幅または高さを可変にするか否か",
      "type": "boolean"
    },
    "font": {
      "title": "フォント",
      "description": "フォントを設定",
      "type": "object",
      "properties": {
        "name": {
          "title": "フォント名",
          "type": "string",
          "minLength": 1
        },
        "encodingName": {
          "title": "エンコーディング名",
          "type": "string",
          "minLength": 1
        },
        "ttc": {
          "title": "TTCフォト",
          "type": "object",
          "properties": {
            "filePath": {
              "title": "フォントファイルパス",
              "type": "string",
              "minLength": 1
            },
            "index": {
              "title": "インデックス",
              "type": "integer",
              "minimum": 0
            },
            "embedding": {
              "title": "埋め込み",
              "type": "boolean",
              "default": false
            }
          },
          "required": [
            "filePath",
            "index",
            "embedding"
          ]
        },
        "ttf": {
          "title": "TTFフォント",
          "type": "object",
          "properties": {
            "filePath": {
              "title": "フォントファイルパス",
              "type": "string"
            },
            "embedding": {
              "title": "埋め込み",
              "type": "boolean"
            }
          },
          "required": [
            "filePath",
            "embedding"
          ]
        },
        "type1": {
          "title": "Type1フォント",
          "type": "object",
          "properties": {
            "armFilePath": {
              "title": "ARMファイルパス",
              "type": "string"
            },
            "dataFilePath": {
              "title": "データファイルパス",
              "type": "string"
            }
          },
          "required": [
            "armFilePath",
            "dataFilePath"
          ]
        }
      }
    },
    "image": {
      "title": "画像",
      "description": "画像を設定",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/container_type",
          "enum": ["image"]
        },
        "path": {
          "title": "画像のファイルパス",
          "type": "string",
          "minLength": 1
        },
        "size": {
          "$ref": "#/definitions/size"
        }
      },
      "required": [
        "type",
        "path"
      ]
    },
    "page": {
      "title": "ページ",
      "description": "ページを設定",
      "type": "object",
      "properties": {
        "container": {
          "$ref": "#/definitions/box"
        },
        "contentSize": {
          "$ref": "#/definitions/size"
        },
        "backgroundColor": {
          "$ref": "#/definitions/color"
        },
        "border": {
          "$ref": "#/definitions/border"
        },
        "padding": {
          "$ref": "#/definitions/padding"
        }
      },
      "required": [
        "container",
        "contentSize"
      ]
    },
    "padding": {
      "title": "padding",
      "description": "パディングを設定",
      "type": "object",
      "properties": {
        "top": {
          "title": "上",
          "type": "number",
          "minimum": 1
        },
        "right": {
          "title": "右",
          "type": "number",
          "minimum": 1
        },
        "bottom": {
          "title": "下",
          "type": "number",
          "minimum": 1
        },
        "left": {
          "title": "左",
          "type": "number",
          "minimum": 1
        }
      }
    },
    "point": {
      "title": "座標",
      "description": "座標を設定",
      "type": "object",
      "properties": {
        "x": {
          "title": "X座標",
          "type": "integer"
        },
        "y": {
          "title": "Y座標",
          "type": "integer"
        }
      }
    },
    "positioned_box": {
      "title": "単一レイアウトコンテナ",
      "description": "コンテナまたはコンテントを1つ保持し任意の場所に配置",
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/container_type",
          "enum": ["positioned_box"]
        },
        "top": {
          "title": "上",
          "type": "number",
          "minimum": 1
        },
        "right": {
          "title": "右",
          "type": "number",
          "minimum": 1
        },
        "bottom": {
          "title": "下",
          "type": "number",
          "minimum": 1
        },
        "left": {
          "title": "左",
          "type": "number",
          "minimum": 1
        },
        "size": {
          "$ref": "#/definitions/size"
        },
        "child": {
          "$ref": "#/definitions/any_container"
        }
      },
      "required": [
        "type",
        "child"
      ]
    },
    "row": {
      "title": "行レイアウトコンテナ",
      "description": "複数のコンテナを保持",
      "properties": {
        "alignment": {
          "$ref": "#/definitions/alignment"
        },
        "type": {
          "$ref": "#/definitions/container_type",
          "enum": ["row"]
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/any_container"
          },
          "minItems": 1
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    "size": {
      "type": "object",
      "properties": {
        "width": {
          "title": "幅",
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "title": "高さ",
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "textSize": {
      "title": "テキストサイズ",
      "description": "テキストサイズを設定",
      "type": "integer",
      "minimum": 1
    },
    "text": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/container_type",
          "enum": ["text"]
        },
        "content": {
          "title": "テキスト内容",
          "type": "string",
          "minLength": 1
        },
        "color": {
          "$ref": "#/definitions/color"
        },
        "font": {
          "$ref": "#/definitions/font"
        },
        "textSize": {
          "$ref": "#/definitions/textSize"
        }
      },
      "required": [
        "type",
        "content"
      ]
    }
  },
  "properties": {
    "author": {
      "title": "作成者",
      "description": "ドキュメントの情報属性を設定",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "creator": {
      "title": "アプリケーション",
      "description": "ドキュメントの情報属性を設定",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "compression": {
      "title": "圧縮モード",
      "description": "ドキュメントの圧縮モードを設定",
      "type": "string",
      "enum": [
        "none",
        "text",
        "image",
        "metadata",
        "all"
      ]
    },
    "encryption": {
      "title": "暗号化モード",
      "description": "ドキュメントの暗号化モードを設定",
      "oneOf": [
        {
          "properties": {
            "mode": {
              "title": "アルゴリズム",
              "type": "string",
              "enum": [
                "Revision2"
              ]
            },
            "length": {
              "title": "暗号キーの長さ",
              "type": "integer",
              "minimum": 5,
              "maximum": 5
            }
          },
          "required": [
            "mode",
            "length"
          ]
        },
        {
          "properties": {
            "mode": {
              "title": "アルゴリズム",
              "type": "string",
              "enum": [
                "Revision3"
              ]
            },
            "length": {
              "title": "暗号キーの長さ",
              "type": "integer",
              "minimum": 5,
              "maximum": 16
            }
          },
          "required": [
            "mode",
            "length"
          ]
        }
      ]
    },
    "pages": {
      "title": "ページ",
      "type": "array",
      "items": {
        "$ref": "#/definitions/page"
      },
      "minItems": 1,
      "maxItems": 8191
    },
    "password": {
      "title": "パスワード",
      "description": "ドキュメントにパスワードを設定",
      "properties": {
        "owner": {
          "title": "所有者パスワード",
          "description": "ユーザーパスワードと同じ文字列を指定することはできません",
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "user": {
          "title": "利用者パスワード",
          "description": "NULLや空文字可",
          "type": [
            "null",
            "string"
          ],
          "minLength": 1,
          "maxLength": 100
        }
      },
      "required": [
        "owner"
      ]
    },
    "permission": {
      "title": "使用権限",
      "description": "ドキュメントの使用権限を設定",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "read",
          "print",
          "edit_all",
          "copy",
          "edit"
        ]
      },
      "minItems": 1,
      "maxItems": 5
    },
    "subject": {
      "title": "サブタイトル",
      "description": "ドキュメントの情報属性を設定",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "title": {
      "title": "タイトル",
      "description": "ドキュメントの情報属性を設定",
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    }
  },
  "required": [
    "author",
    "pages",
    "title"
  ]
}
